{
  "compilerOptions": {
    "target": "ES2017",                                 
    "module": "commonjs",                              
    "rootDir": ".",
    "moduleResolution": "Node", 
    "baseUrl": ".",
    "paths": {
      "zod": ["node_modules/zod"]
    },                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,                         
  },
}
