{
  "compilerOptions": {
    "target": "es6",                                 
    "module": "commonjs",                              
    "rootDir": "./src",
    "moduleResolution": "Node",                   
    "outDir": "./dist",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                    
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
