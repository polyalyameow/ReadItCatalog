{
  "compilerOptions": {
    "target": "ES2017",                                 
    "module": "commonjs",                              
    "rootDir": ".",
    "moduleResolution": "Node",                   
    "outDir": "./server/dist",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,                         
  },
  "include": ["client", "server", "shared"],
  "exclude": ["node_modules"],
  "typeRoots": ["./node_modules/@types", "./node_modules"]
}
