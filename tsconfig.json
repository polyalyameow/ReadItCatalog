{
  "compilerOptions": {
    "target": "ES2017",                                 
    "module": "commonjs",                              
    "rootDir": "src",
    "moduleResolution": "Node",                   
    "outDir": "dist",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,                         
  },
"include": ["src"],
  "exclude": ["node_modules"]
}
