{
  "compilerOptions": {
    "target": "es2017",                                 
    "module": "commonjs",                              
    "rootDir": "src",
    "moduleResolution": "Node",                   
    "outDir": "dist",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                    
  },
"include": ["src"],
  "exclude": ["node_modules"]
}
